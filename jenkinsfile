pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "akhilagrawal206767/your-app"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/abhja/Nimap-task.git'  // Replace with your repo URL
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'ec2-private-key', keyFileVariable: 'SSH_KEY'),
                    string(credentialsId: 'ec2-ip', variable: 'EC2_IP'),
                    string(credentialsId: 'ec2-user', variable: 'EC2_USER')
                ]) {
                    script {
                        sh """
                        ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${EC2_USER}@${EC2_IP} << EOF
                            docker stop my-container || true
                            docker rm my-container || true
                            docker pull ${DOCKER_IMAGE}
                            docker run -d -p 8000:8000 --name my-container ${DOCKER_IMAGE}
                        EOF
                        """
                    }
                }
            }
        }
    }
}
